<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".Activities.ForgotPasswordActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@+id/logo"
        android:id="@+id/txt_for"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_centerInParent="true"
        android:text="Forgot Your Password ? "/>

    <TextView
        android:layout_below="@+id/txt_for"
        android:id="@+id/txt_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="12dp"
        android:textColor="@color/gray"
        android:layout_marginTop="5dp"
        android:text="Enter your e-mail address and we"/>

    <TextView
        android:layout_below="@+id/txt_sign"
        android:id="@+id/txt_sign1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="12dp"
        android:textColor="@color/gray"
        android:text="will send you instruction to reset"/>

    <TextView
        android:layout_below="@+id/txt_sign1"
        android:id="@+id/txt_sign3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="12dp"
        android:textColor="@color/gray"
        android:text="your password"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_below="@+id/txt_sign3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/black_backg"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="1dp"
            android:hint="Enter e-mail"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_below="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_login"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Continue"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/fullblack_backg"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_below="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_back"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Back"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/app_clr"
            />
    </LinearLayout>

</RelativeLayout>