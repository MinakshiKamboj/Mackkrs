<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.CreateUserDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linear_"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/gray1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:tint="@color/app_clr" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="User Details"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14dp"/>

            </LinearLayout>
        </LinearLayout>


        <ScrollView
            android:layout_below="@+id/linear_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_marn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:text="Marn"/>

                <LinearLayout
                    android:id="@+id/linear10"
                    android:layout_below="@+id/txt_marn"
                    android:layout_width="match_parent"
                    android:background="@color/gray2"
                    android:layout_marginTop="5dp"
                    android:layout_height="35dp">

                    <EditText
                        android:id="@+id/edt_marn"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="12dp"
                        android:background="@color/gray2"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/gray"
                        android:maxLines="1"
                        android:hint="johndo"/>
                </LinearLayout>


                <TextView
                    android:layout_below="@+id/linear10"
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:text="Name"/>

                <LinearLayout
                    android:id="@+id/linear9"
                    android:layout_below="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:background="@color/gray2"
                    android:layout_marginTop="5dp"
                    android:layout_height="35dp">

                    <EditText
                        android:id="@+id/edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="12dp"
                        android:maxLines="1"
                        android:background="@color/gray2"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/gray"
                        android:hint="johndo"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_fmly"
                    android:layout_below="@+id/linear9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:text="Family Name"/>

                <LinearLayout
                    android:id="@+id/linear11"
                    android:layout_below="@+id/txt_fmly"
                    android:layout_width="match_parent"
                    android:background="@color/gray2"
                    android:layout_marginTop="5dp"
                    android:layout_height="35dp">

                    <EditText
                        android:id="@+id/edt_fmlyname"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="12dp"
                        android:maxLines="1"
                        android:background="@color/gray2"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/gray"
                        android:hint="johndo"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_pass"
                    android:layout_below="@+id/linear11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:text="Password"/>

                <LinearLayout
                    android:id="@+id/linear13"
                    android:layout_below="@+id/txt_pass"
                    android:layout_width="match_parent"
                    android:background="@color/gray2"
                    android:layout_marginTop="5dp"
                    android:layout_height="35dp">

                    <EditText
                        android:id="@+id/edt_pass"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="12dp"
                        android:maxLines="1"
                        android:background="@color/gray2"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/gray"
                        android:hint="johndo"/>
                </LinearLayout>

                <TextView
                    android:layout_below="@+id/linear13"
                    android:id="@+id/txt_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:text="E-mail"/>

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_below="@+id/txt_mail"
                    android:layout_width="match_parent"
                    android:background="@color/gray2"
                    android:layout_marginTop="5dp"
                    android:layout_height="35dp">

                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="12dp"
                        android:maxLines="1"
                        android:inputType="textEmailAddress"
                        android:background="@color/gray2"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/gray"
                        android:hint="johndoe@gmail.com"/>
                </LinearLayout>

                <TextView
                    android:layout_below="@+id/linear"
                    android:id="@+id/txt_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:text="Phone"/>

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_below="@+id/txt_phone"
                    android:layout_width="match_parent"
                    android:background="@color/gray2"
                    android:layout_marginTop="5dp"
                    android:layout_height="35dp">

                    <EditText
                        android:id="@+id/edt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="12dp"
                        android:inputType="number"
                        android:maxLines="1"
                        android:background="@color/gray2"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/gray"
                        android:hint="+61-784735837458"/>
                </LinearLayout>
                <TextView
                    android:layout_below="@+id/linear1"
                    android:id="@+id/txt_street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:text="Street No, Box number, or Locked Bag number"/>

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_below="@+id/txt_street"
                    android:layout_width="match_parent"
                    android:background="@color/gray2"
                    android:layout_marginTop="5dp"
                    android:layout_height="35dp">

                    <EditText
                        android:id="@+id/edt_streetno"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="12dp"
                        android:maxLines="1"
                        android:background="@color/gray2"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/gray"
                        android:hint="958 Sydm rd, vic 858, Australia"/>
                </LinearLayout>

                <TextView
                    android:layout_below="@+id/linear2"
                    android:id="@+id/txt_street_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:text="Street Name"/>

                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_below="@+id/txt_street_name"
                    android:layout_width="match_parent"
                    android:background="@color/gray2"
                    android:layout_marginTop="5dp"
                    android:layout_height="35dp">

                    <EditText
                        android:id="@+id/edt_streentname"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="12dp"
                        android:maxLines="1"
                        android:background="@color/gray2"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/gray"
                        android:hint="Elizabeth Street"/>
                </LinearLayout>
                <TextView
                    android:layout_below="@+id/linear3"
                    android:id="@+id/txt_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:text="City"/>

                <LinearLayout
                    android:id="@+id/linear4"
                    android:layout_below="@+id/txt_city"
                    android:layout_width="match_parent"
                    android:background="@color/gray2"
                    android:layout_marginTop="5dp"
                    android:layout_height="35dp">

                    <EditText
                        android:id="@+id/edt_city"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="12dp"
                        android:maxLines="1"
                        android:background="@color/gray2"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/gray"
                        android:hint="Sydney"/>
                </LinearLayout>

                <TextView
                    android:layout_below="@+id/linear4"
                    android:id="@+id/txt_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:text="State"/>

                <LinearLayout
                    android:id="@+id/linear5"
                    android:layout_below="@+id/txt_state"
                    android:layout_width="match_parent"
                    android:background="@color/gray2"
                    android:layout_marginTop="5dp"
                    android:layout_height="35dp">

                    <EditText
                        android:id="@+id/edt_state"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="12dp"
                        android:maxLines="1"
                        android:background="@color/gray2"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/gray"
                        android:hint="New South Walea"/>
                </LinearLayout>

                <TextView
                    android:layout_below="@+id/linear5"
                    android:id="@+id/txt_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:text="Country"/>

                <LinearLayout
                    android:id="@+id/linear6"
                    android:layout_below="@+id/txt_country"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@color/gray2"
                    android:layout_height="35dp">

                    <Spinner
                        android:id="@+id/cntry_spinners"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:focusable="false"
                        android:hint="select Country"
                        android:paddingLeft="12dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/gray"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_below="@+id/linear6"
                    android:id="@+id/txt_zip_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:text="ZIP Code"/>

                <LinearLayout
                    android:id="@+id/linear7"
                    android:layout_below="@+id/txt_zip_code"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@color/gray2"
                    android:layout_height="35dp">

                    <EditText
                        android:id="@+id/edt_zip"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="12dp"
                        android:background="@color/gray2"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/gray"
                        android:maxLines="1"
                        android:hint="2101"/>
                </LinearLayout>

                <TextView
                    android:layout_below="@+id/linear7"
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:text="Address"/>

                <LinearLayout
                    android:id="@+id/linear8"
                    android:layout_below="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@color/gray2"
                    android:layout_height="35dp">

                    <EditText
                        android:id="@+id/edt_address"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="12dp"
                        android:maxLines="1"
                        android:background="@color/gray2"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/gray"
                        android:hint="2101"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_below="@+id/linear8"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_login"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:text="Update Profile"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="10dp"
                        android:background="@color/black"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>