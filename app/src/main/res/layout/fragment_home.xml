<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame_container"
    android:background="@color/white"
    tools:context=".Fragments.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@color/white"
     >

     <TextView
         android:id="@+id/txt_wel"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textColor="@color/black"
         android:gravity="center"
         android:layout_marginTop="10dp"
         android:text="Welcome to"/>

     <TextView
         android:id="@+id/txt_mac"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textColor="@color/black"
         android:textSize="15dp"
         android:textStyle="bold"
         android:gravity="center"
         android:layout_below="@+id/txt_wel"
         android:text="McKkr's CPD"/>

     <LinearLayout
         android:id="@+id/linear"
         android:layout_below="@+id/txt_mac"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:weightSum="2"
         android:layout_marginTop="10dp"
         android:orientation="horizontal">

         <LinearLayout
             android:id="@+id/linear_pri_study"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_gravity="center"
             android:background="@color/white"
             android:gravity="center"
             android:orientation="vertical">

             <ImageView
                 android:layout_width="110dp"
                 android:layout_height="120dp"
                 android:src="@drawable/private_study"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/black"
                 android:textSize="14dp"
                 android:text="Private Study"/>

         </LinearLayout>
         <LinearLayout
             android:id="@+id/linear_workshop"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_gravity="center"
             android:gravity="center"
             android:background="@color/white"
             android:orientation="vertical">

             <ImageView
                 android:layout_width="110dp"
                 android:layout_height="120dp"
                 android:src="@drawable/online_workshop"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/black"
                 android:textSize="14dp"
                 android:text="Online WorkShop"/>

         </LinearLayout>

     </LinearLayout>

     <LinearLayout
         android:id="@+id/linear1"
         android:layout_below="@+id/linear"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:weightSum="2"
         android:layout_marginTop="15dp"
         android:orientation="horizontal">

         <LinearLayout
             android:id="@+id/linear_order"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_gravity="center"
             android:background="@color/white"
             android:gravity="center"
             android:orientation="vertical">

             <ImageView
                 android:layout_width="110dp"
                 android:layout_height="120dp"
                 android:src="@drawable/order_activities"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/black"
                 android:textSize="14dp"
                 android:text="Order Activities"/>

         </LinearLayout>
         <LinearLayout
             android:id="@+id/linear_profile"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:background="@color/white"
             android:layout_gravity="center"
             android:gravity="center"
             android:orientation="vertical">

             <ImageView
                 android:layout_width="110dp"
                 android:layout_height="120dp"
                 android:src="@drawable/profile"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/black"
                 android:textSize="14dp"
                 android:text="Profile"/>

         </LinearLayout>

     </LinearLayout>

     <LinearLayout
         android:id="@+id/linear2"
         android:layout_below="@+id/linear1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:weightSum="2"
         android:layout_marginTop="15dp"
         android:orientation="horizontal">

         <LinearLayout
             android:id="@+id/linear_comp_his"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_gravity="center"
             android:gravity="center"
             android:background="@color/white"
             android:orientation="vertical">

             <ImageView
                 android:layout_width="110dp"
                 android:layout_height="120dp"
                 android:src="@drawable/online_workshop"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/black"
                 android:textSize="14dp"
                 android:text="Completed Activities"/>

         </LinearLayout>
         <LinearLayout
             android:id="@+id/orderhistory_linear"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_gravity="center"
             android:gravity="center"
             android:background="@color/white"
             android:orientation="vertical">

             <ImageView
                 android:layout_width="110dp"
                 android:layout_height="120dp"
                 android:src="@drawable/order_history"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/black"
                 android:textSize="14dp"
                 android:text="Order History"/>

         </LinearLayout>

     </LinearLayout>

     <LinearLayout
         android:id="@+id/linear_feedback"
         android:layout_below="@+id/linear2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
         android:background="@color/white"
         android:layout_marginLeft="40dp"
         android:orientation="vertical">

         <ImageView
             android:layout_width="110dp"
             android:layout_height="120dp"
             android:src="@drawable/order_history"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/black"
             android:textSize="14dp"
             android:layout_gravity="center"
             android:text="Feedback"/>

     </LinearLayout>

 </RelativeLayout>
    </ScrollView>
    </RelativeLayout>
</FrameLayout>